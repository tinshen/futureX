<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activity.mine.SafeActivity">

    <com.songbai.futurex.view.TitleBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        app:backFeature="true"
        app:titleText="@string/set_gesture_pwd"
        app:titleTextColor="@color/text22"
        app:titleTextSize="17sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/please_set_gesture_pwd"
        android:textColor="@color/text66"
        android:textSize="16sp"/>

    <com.songbai.futurex.view.safety.NineGridView
        android:id="@+id/nineGridView"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:layout_marginTop="30dp"
        app:errorColor="@color/red"
        app:normalCircleRadius="4dp"
        app:normalColor="@color/bg_B7BBC2"
        app:selectColor="@color/colorPrimary"/>

    <TextView
        android:visibility="invisible"
        android:id="@+id/passErrorHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/gesture_pwd_must_less_than_four"
        android:textColor="@color/red"
        android:textSize="12dp"/>


    <com.songbai.futurex.view.safety.GestureUnLockSudoKuView
        android:id="@+id/lockView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="38dp"
        android:layout_marginTop="25dp"
        app:errorColor="@color/red"
        app:linkLineHeight="1dp"
        app:normalCircleRadius="38dp"
        app:normalColor="@color/bg_D7E4FF"
        app:selectCircleRadius="16dp"
        app:selectColor="@color/bg_6B9BF6"/>
</LinearLayout>
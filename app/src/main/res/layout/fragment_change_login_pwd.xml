<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <com.songbai.futurex.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/change_login_pwd"/>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@color/white">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="14dp"
            android:text="@string/new_login_pwd"
            android:textColor="@color/text22"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <com.songbai.futurex.view.PasswordEditText
            android:id="@+id/password"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:minHeight="50dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            app:hasBottomSplitLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView9"
            app:maxCharNum="50"
            app:splitLineColor="@color/bgF5"
            app:textHint="@string/please_input_new_login_pwd"/>

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="确认密码"
            android:textColor="@color/text22"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/password"/>

        <com.songbai.futurex.view.PasswordEditText
            android:id="@+id/confirmPassword"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:minHeight="50dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            app:hasBottomSplitLine="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11"
            app:maxCharNum="50"
            app:splitLineColor="@color/bgF5"
            app:textHint="@string/confirm_login_pwd"/>

        <TextView
            android:id="@+id/authCodeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:text="@string/sms_auth_code"
            android:textColor="@color/text22"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/confirmPassword"/>

        <EditText
            android:id="@+id/smsAuthCode"
            style="@style/SingleEditText"
            android:layout_width="0dp"
            android:layout_height="43dp"
            android:hint="@string/please_input_sms_auth_code"
            android:inputType="number"
            android:minHeight="50dp"
            android:visibility="visible"
            app:layout_constraintEnd_toStartOf="@+id/sendAuthCode"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/authCodeText"/>

        <TextView
            android:id="@+id/sendAuthCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="@string/send_auth_code"
            android:textColor="@color/primary_disabled_gray"
            android:textSize="15sp"
            app:layout_constraintBottom_toBottomOf="@+id/smsAuthCode"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/smsAuthCode"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/sendAuthHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="6dp"
        android:textColor="@color/text66"
        android:textSize="12sp"
        android:visibility="invisible"
        tools:text="@string/send_sms_auth_code_phone_hint_x"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/btn_primary"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@android:color/white"
        android:textSize="16sp"/>
</LinearLayout>
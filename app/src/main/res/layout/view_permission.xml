<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:gravity="center"
        android:text="@string/x_app_need_permissions_below"
        android:textColor="@color/text22"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/phonePermissionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:text="@string/phone_permission"
        android:textColor="@color/text22"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title"/>

    <TextView
        android:id="@+id/phonePermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone_permission_to_protect_account"
        android:textColor="@color/text99"
        app:layout_constraintLeft_toLeftOf="@id/phonePermissionTitle"
        app:layout_constraintTop_toBottomOf="@id/phonePermissionTitle"/>

    <TextView
        android:id="@+id/storagePermissionTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/storage_permission"
        android:textColor="@color/text22"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="@id/phonePermission"
        app:layout_constraintTop_toBottomOf="@id/phonePermission"/>

    <TextView
        android:id="@+id/storagePermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/storage_permission_to_save_bandwidth"
        android:textColor="@color/text99"
        app:layout_constraintLeft_toLeftOf="@id/storagePermissionTitle"
        app:layout_constraintTop_toBottomOf="@id/storagePermissionTitle"/>

    <TextView
        android:id="@+id/openPermission"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:minHeight="26dp"
        android:minWidth="60dp"
        android:text="@string/permission_open"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/close"
        app:layout_constraintTop_toBottomOf="@id/storagePermission"/>

    <TextView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:minHeight="26dp"
        android:minWidth="60dp"
        android:text="@string/permission_close"
        android:textColor="@color/textBD"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/openPermission"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storagePermission"/>
</android.support.constraint.ConstraintLayout>
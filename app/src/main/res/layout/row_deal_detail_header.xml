<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/tradePair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="买入 HSR/USDT"/>

    <TextView
        android:id="@+id/dealTotalAmtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/deal_total_amt_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/tradePair"
        app:layout_constraintTop_toBottomOf="@id/tradePair"/>

    <TextView
        android:id="@+id/dealAveragePriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_average_price_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintLeft_toRightOf="@id/dealTotalAmtTitle"
        app:layout_constraintRight_toLeftOf="@id/dealVolumeTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmtTitle"/>

    <TextView
        android:id="@+id/dealVolumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="@string/deal_volume_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmtTitle"/>

    <TextView
        android:id="@+id/dealTotalAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/dealTotalAmtTitle"
        app:layout_constraintTop_toBottomOf="@id/dealTotalAmtTitle"
        tools:text="3061.68841100"/>

    <TextView
        android:id="@+id/dealAveragePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/dealAveragePriceTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmt"
        tools:text="10.1001"/>

    <TextView
        android:id="@+id/dealVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/dealVolumeTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmt"
        tools:text="300.1400"/>

    <TextView
        android:id="@+id/dealFeeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/deal_fee_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/dealTotalAmt"
        app:layout_constraintTop_toBottomOf="@id/dealTotalAmt"/>

    <TextView
        android:id="@+id/dealFee"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/dealFeeTitle"
        app:layout_constraintTop_toBottomOf="@id/dealFeeTitle"
        tools:text="0.05"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="177dp">

    <View
        android:id="@+id/split"
        android:layout_width="match_parent"
        android:layout_height="12dp"
        android:background="@color/bgF5"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tradePair"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/green"
        android:textSize="15sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@id/split"
        tools:text="买入 HSR/USDT"/>

    <TextView
        android:id="@+id/orderStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/tradePair"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="已成交"/>

    <TextView
        android:id="@+id/timeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/time"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/tradePair"
        app:layout_constraintTop_toBottomOf="@id/tradePair"/>

    <TextView
        android:id="@+id/entrustPriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintHorizontal_bias="0.753"
        app:layout_constraintLeft_toRightOf="@id/timeTitle"
        app:layout_constraintRight_toLeftOf="@id/entrustVolumeTitle"
        app:layout_constraintTop_toTopOf="@id/timeTitle"
        tools:text="@string/entrust_price_x"/>

    <TextView
        android:id="@+id/entrustVolumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/entrustPriceTitle"
        tools:text="@string/entrust_volume_x"/>

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/timeTitle"
        app:layout_constraintTop_toBottomOf="@id/timeTitle"
        tools:text="09:56 05/04"/>

    <TextView
        android:id="@+id/entrustPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="14.05"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/entrustPriceTitle"
        app:layout_constraintTop_toBottomOf="@id/entrustPriceTitle"
        app:layout_constraintTop_toTopOf="@id/time"/>

    <TextView
        android:id="@+id/entrustVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="21.89"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/entrustVolumeTitle"
        app:layout_constraintTop_toBottomOf="@id/entrustVolumeTitle"
        app:layout_constraintTop_toTopOf="@id/entrustPrice"/>

    <TextView
        android:id="@+id/dealTotalAmtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="@string/deal_total_amt_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/time"
        app:layout_constraintTop_toBottomOf="@id/time"/>

    <TextView
        android:id="@+id/dealAveragePriceTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/deal_average_price_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/entrustPriceTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmtTitle"/>

    <TextView
        android:id="@+id/dealVolumeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="12dp"
        android:text="@string/deal_volume_x"
        android:textColor="@color/text99"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmtTitle"/>

    <TextView
        android:id="@+id/dealTotalAmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintLeft_toLeftOf="@id/dealTotalAmtTitle"
        app:layout_constraintTop_toBottomOf="@id/dealTotalAmtTitle"
        tools:text="3061.68841100"/>

    <TextView
        android:id="@+id/dealAveragePrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/dealAveragePriceTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmt"
        tools:text="10.1001"/>

    <TextView
        android:id="@+id/dealVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/text66"
        android:textSize="13sp"
        app:layout_constraintRight_toRightOf="@id/dealVolumeTitle"
        app:layout_constraintTop_toTopOf="@id/dealTotalAmt"
        tools:text="300.1400"/>
</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/filtrateGroup"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:visibility="gone">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:gravity="end|center_vertical"
            android:text="@string/coin_type"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/selectCoinType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_f5_r4"
            android:drawableRight="@drawable/ic_invitation_angle_down"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="@string/select_coin_type"
            android:textColor="@color/text22"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:gravity="end|center_vertical"
            android:text="@string/flow_type"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/flowType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_f5_r4"
            android:drawableRight="@drawable/ic_invitation_angle_down"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="@string/all_type"
            android:textColor="@color/text22"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:gravity="end|center_vertical"
            android:text="@string/status"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:background="@drawable/bg_f5_r4"
            android:drawableRight="@drawable/ic_invitation_angle_down"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="5dp"
            android:text="@string/all_status"
            android:textColor="@color/text22"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginRight="11dp"
            android:gravity="end|center_vertical"
            android:text="@string/time"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/startTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_f5_r4"
            android:drawableLeft="@drawable/ic_history_calendar"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="åˆ°"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/endTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="25dp"
            android:layout_weight="1"
            android:background="@drawable/bg_f5_r4"
            android:drawableLeft="@drawable/ic_history_calendar"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:textColor="@color/text22"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/reset"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rect_border"
            android:gravity="center"
            android:text="@string/reset"
            android:textColor="@color/text22"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/filtrate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/btn_primary"
            android:gravity="center"
            android:text="@string/filtrate"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgF5"
    android:orientation="vertical">

    <com.songbai.futurex.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/pricing_method"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/cny"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white_pressed_f5"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_blue_check_mark"
        app:rowText="@string/cny"
        app:rowTextColor="@color/text22"
        app:rowTextSize="16sp"
        app:rowVerticalPadding="0dp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/usd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_white_pressed_f5"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_blue_check_mark"
        app:rowText="@string/usd"
        app:rowTextColor="@color/text22"
        app:rowTextSize="16sp"
        app:rowVerticalPadding="0dp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/twd"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@drawable/bg_white_pressed_f5"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_blue_check_mark"
        app:rowText="@string/twd"
        app:rowTextColor="@color/text22"
        app:rowTextSize="16sp"
        app:rowVerticalPadding="0dp"/>
</LinearLayout>
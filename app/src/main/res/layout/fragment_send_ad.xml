<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.songbai.futurex.view.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/publish_ad"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:text="USDT/CNY"
            android:textColor="@color/text22"
            android:textSize="12sp"/>

        <TextView
            android:layout_width="50dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@drawable/btn_primary_r100"
            android:gravity="center"
            android:text="@string/preview"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bg_f5_r16"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/buyIn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="18dp"
                    android:background="@drawable/bg_radio_button_header_tab"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/buy_x"/>

                <TextView
                    android:id="@+id/sellOut"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg_radio_button_header_tab"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/sell_x"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/price_type"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/priceType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_common_pop_arrow_down"
                    android:gravity="end"
                    android:text="价格类型"
                    android:textColor="@color/text22"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/priceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/premium_rate"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/premiumRate"
                    style="@style/SingleEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:text="0.5"
                    android:textColor="@color/text49"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/priceSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:text="%"
                    android:textColor="@color/text99"
                    android:textSize="15sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="20dp"
                android:layout_marginTop="10dp"
                android:text="价格:"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="17dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/trade_limit"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/tradeLimit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="@color/text99"
                    android:textSize="15sp"
                    tools:text="最小限制－最大限制"/>

                <TextView
                    android:id="@+id/payCurrencySymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text99"
                    android:textSize="15sp"
                    tools:text="CNY"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/trade_amount"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <EditText
                    android:id="@+id/tradeAmount"
                    style="@style/SingleEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:inputType="numberDecimal"
                    android:textColor="@color/text99"
                    android:textSize="15sp"
                    tools:text="1"/>

                <TextView
                    android:id="@+id/coinSymbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    android:textColor="@color/text99"
                    android:textSize="15sp"
                    tools:text="BTC"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/pay_type"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/payType"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/ic_common_pop_arrow_down"
                    android:gravity="end"
                    android:textColor="@color/text22"
                    android:textSize="15sp"
                    tools:text="支付宝、微信"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/remark"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/optional"
                    android:textColor="@color/text99"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/remark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/text22"
                    android:textSize="15sp"
                    tools:text="请勿在汇款备注内填写比特币、B..."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/buyer_limit"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/optional"
                    android:textColor="@color/text99"
                    android:textSize="15sp"/>

                <TextView
                    android:id="@+id/buyer_limit"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/text22"
                    android:textSize="15sp"
                    tools:text="认证、交易成功次数"/>
            </LinearLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/buyerLimitGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/authenticationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/authentication"
                    android:textColor="@color/text66"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/primaryCertification"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="@id/primaryCertification"/>

                <TextView
                    android:id="@+id/primaryCertification"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="20dp"
                    android:layout_toLeftOf="@id/seniorCertification"
                    android:gravity="center"
                    android:text="@string/primary_certification"
                    app:layout_constraintLeft_toLeftOf="@id/tradeCountLimit"
                    app:layout_constraintRight_toLeftOf="@id/seniorCertification"/>

                <TextView
                    android:id="@+id/seniorCertification"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:gravity="center"
                    android:text="@string/senior_certification"
                    app:layout_constraintLeft_toRightOf="@id/primaryCertification"
                    app:layout_constraintRight_toRightOf="@id/tradeCountLimit"/>

                <TextView
                    android:id="@+id/hintText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_count_more_than"
                    android:textColor="@color/text66"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="@id/tradeCountLimit"
                    app:layout_constraintLeft_toLeftOf="@id/authenticationText"
                    app:layout_constraintRight_toLeftOf="@id/tradeCountLimit"
                    app:layout_constraintTop_toBottomOf="@id/authenticationText"
                    app:layout_constraintTop_toTopOf="@id/tradeCountLimit"/>

                <TextView
                    android:id="@+id/tradeCountLimit"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    app:layout_constraintLeft_toRightOf="@id/hintText"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/seniorCertification"
                    tools:text="1"/>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r4"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:text="@string/contract_info"
                    android:textColor="@color/text66"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/optional"
                    android:textColor="@color/text99"
                    android:textSize="15sp"/>

                <FrameLayout
                    android:layout_width="60dp"
                    android:layout_height="32dp"
                    android:background="@drawable/bg_white_r2">

                    <TextView
                        android:id="@+id/areaCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/ic_area_code_arrow"
                        tools:text="0086"/>
                </FrameLayout>

                <TextView
                    android:id="@+id/phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:singleLine="true"
                    android:textColor="@color/text22"
                    android:textSize="15sp"
                    tools:text="15068771470"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/read_and_agree"
                    android:textColor="@color/text99"
                    android:textSize="12sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/coin_trade_protocol "
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="40dp"
                android:text="@string/attention_rules"
                android:textColor="@color/text99"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/attention_rules_text"
                android:textColor="@color/text66"
                android:textSize="13sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="20dp"
                android:text="@string/attention_hint"
                android:textColor="@color/text99"
                android:textSize="17sp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_f5_r2"
                android:paddingBottom="8dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="12dp"
                android:text="@string/attention_hint_text"
                android:textColor="@color/text99"
                android:textSize="12sp"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
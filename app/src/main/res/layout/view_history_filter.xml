<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/historyFilter"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:background="@color/white"
    android:orientation="vertical"
    android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/trading_on"
            android:textColor="@color/text66"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/currency"
                android:layout_width="150dp"
                android:layout_height="44dp"
                android:background="@drawable/bg_currency_edit"
                android:gravity="center_vertical"
                android:hint="@string/coin_type"
                android:paddingLeft="10dp"
                android:textColor="@color/text22"
                android:textColorHint="@color/text99"
                android:textSize="15sp" />

            <TextView
                android:layout_width="33dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="/"
                android:textColor="@color/text22"
                android:textSize="15sp" />

            <RelativeLayout
                android:id="@+id/selectCurrencyLayout"
                android:layout_width="150dp"
                android:layout_height="44dp">

                <TextView
                    android:id="@+id/selectCurrency"
                    android:layout_width="150dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_currency_edit"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/select_currency"
                    android:textColor="@color/text22"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/selectIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/ic_common_s_triangle" />

            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/direction"
            android:textColor="@color/text66"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/buyBtn"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:background="@drawable/btn_buy_sell"
                android:text="@string/buy_in"/>

            <TextView
                android:id="@+id/sellBtn"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:background="@drawable/btn_buy_sell"
                android:text="@string/sell_out"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/order_status"
            android:textColor="@color/text66"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/has_finish"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:background="@drawable/btn_buy_sell"
                android:text="@string/has_finish"/>

            <TextView
                android:id="@+id/has_withdrawn"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:background="@drawable/btn_buy_sell"
                android:text="@string/has_withdrawn"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/bgF5"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/reset"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:text="@string/reset"/>

            <TextView
                android:id="@+id/filterBtn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/text49"
                android:textSize="15sp"
                android:text="@string/filter"
                android:background="@color/colorPrimary"/>

        </LinearLayout>

</LinearLayout>
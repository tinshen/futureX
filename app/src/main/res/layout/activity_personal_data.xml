<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgF5F5"
    android:orientation="vertical">

    <com.songbai.futurex.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/personal_data"/>

    <RelativeLayout
        android:id="@+id/headImageLayout"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@+id/titleBar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginLeft="14dp"
            android:text="@string/head_portrait"
            android:textColor="@color/text"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/userHeadImage"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:layout_toLeftOf="@+id/helpArrow"
            android:src="@drawable/ic_default_head_portrait"/>

        <ImageView
            android:id="@+id/helpArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            app:srcCompat="@drawable/ic_common_right_arrow"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="12dp"
            android:background="@color/bgF5F5"/>
    </RelativeLayout>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/nickName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/nick_name"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subTextColor="@color/text99"
        app:subTextSize="14sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/realName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/real_name"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subText="@string/please_select"
        app:subTextColor="@color/text99"
        app:subTextSize="14sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/phoneCertification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/phone_certification"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subText="@string/please_select"
        app:subTextColor="@color/text99"
        app:subTextSize="14sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/mailCertification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/mail_certification"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subText="@string/please_select"
        app:subTextColor="@color/text99"
        app:subTextRightDrawable="@drawable/ic_common_unautherized"
        app:subTextSize="14sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/primaryCertification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/primary_certification"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subText="@string/please_select"
        app:subTextColor="@color/text99"
        app:subTextSize="14sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/seniorCertification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:layout_constraintTop_toBottomOf="@+id/sex"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/advanced_certification"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"
        app:subText="@string/please_select"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/fiatPayManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:background="@drawable/bg_white"
        app:hasBottomSplitLine="true"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/fiat_pay_management"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"/>

    <com.songbai.futurex.view.IconTextRow
        android:id="@+id/addressManagement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white"
        app:rightIcon="@drawable/ic_common_right_arrow"
        app:rowText="@string/address_management"
        app:rowTextColor="@color/text"
        app:rowTextSize="16sp"/>

</LinearLayout>
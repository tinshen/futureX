<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgF5"
    android:orientation="vertical">

    <com.songbai.futurex.view.TitleBar
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:backFeature="true"
        app:titleText="@string/personal_data"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/headImageLayout"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/bg_white_pressed_f5"
                app:layout_constraintTop_toBottomOf="@+id/titleBar">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="14dp"
                    android:text="@string/head_portrait"
                    android:textColor="@color/text22"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/userHeadImage"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:layout_toLeftOf="@+id/helpArrow"
                    android:src="@drawable/ic_default_head_portrait"/>

                <ImageView
                    android:id="@+id/helpArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    app:srcCompat="@drawable/ic_common_right_arrow"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="12dp"
                    android:background="@color/bgF5"/>
            </RelativeLayout>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/nickName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                app:hasBottomSplitLine="true"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/nick_name"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"
                app:subTextColor="@color/text99"
                app:subTextSingleLine="true"
                app:subTextSize="14sp"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/realName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                app:rowText="@string/real_name"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"
                app:subText="@string/please_set"
                app:subTextColor="@color/text99"
                app:subTextSingleLine="true"
                app:subTextSize="14sp"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/phoneCertification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_white_pressed_f5"
                app:hasBottomSplitLine="true"
                app:layout_constraintTop_toBottomOf="@+id/sex"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/phone_certification"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"
                app:subTextColor="@color/text99"
                app:subTextSingleLine="true"
                app:subTextSize="14sp"
                tools:subText="@string/please_set"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/mailCertification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                app:hasBottomSplitLine="true"
                app:layout_constraintTop_toBottomOf="@+id/sex"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/mail_certification"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"
                app:subTextColor="@color/text99"
                app:subTextSingleLine="true"
                app:subTextSize="14sp"
                tools:subTextRightDrawable="@drawable/ic_common_unautherized"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/primaryCertification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                app:hasBottomSplitLine="true"
                app:layout_constraintTop_toBottomOf="@+id/sex"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/primary_certification"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"
                app:subTextColor="@color/text99"
                app:subTextSize="14sp"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/seniorCertification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                app:layout_constraintTop_toBottomOf="@+id/sex"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/advanced_certification"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/legalCurrencyPayManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:background="@drawable/bg_white_pressed_f5"
                app:hasBottomSplitLine="true"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/legal_currency_pay_management"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"/>

            <com.songbai.futurex.view.IconTextRow
                android:id="@+id/addressManagement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                app:rightIcon="@drawable/ic_common_right_arrow"
                app:rowText="@string/draw_coin_address_management"
                app:rowTextColor="@color/text22"
                app:rowTextSize="16sp"/>

            <LinearLayout
                android:id="@+id/remindingTransaction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_pressed_f5"
                android:padding="14dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:text="@string/reminding_transaction"
                    android:textColor="@color/text22"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/pushBtn"
                    android:layout_width="27dp"
                    android:layout_height="19dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/switch_track" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_white_top_r4"
    android:orientation="vertical">

    <EditText
        android:id="@+id/minTurnover"
        style="@style/SingleEditText"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_f5_r4"
        android:hint="@string/minLimit"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/divider"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="@id/minTurnover"
        app:layout_constraintLeft_toRightOf="@id/minTurnover"
        app:layout_constraintRight_toLeftOf="@id/maxTurnover"
        app:layout_constraintTop_toTopOf="@id/minTurnover"/>

    <EditText
        android:id="@+id/maxTurnover"
        style="@style/SingleEditText"
        android:layout_width="0dp"
        android:layout_height="44dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/bg_f5_r4"
        android:hint="@string/maxLimit"
        android:inputType="numberDecimal"
        app:layout_constraintLeft_toRightOf="@id/divider"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/payCurrency"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="15dp"
        android:textColor="@color/text99"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minTurnover"
        tools:text="单位：CNY"/>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="50dp"
        android:layout_height="24dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/btn_primary_r100"
        android:gravity="center"
        android:text="@string/confirm"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/minTurnover"/>
</android.support.constraint.ConstraintLayout>
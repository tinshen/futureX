<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/optionalStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:src="@drawable/btn_optional_status"/>

        <TextView
            android:id="@+id/pairName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="BTC/USDT"
            android:textColor="@color/text22"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/pairArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/pairName"
            android:src="@drawable/ic_tb_down_arrow"/>

        <ImageView
            android:id="@+id/switchToMarketPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:src="@drawable/ic_market"/>
    </RelativeLayout>

    <com.songbai.futurex.view.RadioHeader
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="12dp"
        android:gravity="center_vertical"
        app:tabArray="@array/trade_dir"
        app:tabInterval="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@color/bgF5"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1"
            android:text="@string/depth_merge"
            android:textColor="@color/text49"
            android:textSize="13sp"/>

        <TextView
            android:id="@+id/decimalScale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:drawableRight="@drawable/ic_triangle_downward"
            android:gravity="center_vertical"
            android:textColor="@color/text49"
            android:textSize="13sp"
            tools:text="@string/x_scale_decimal"/>
    </LinearLayout>

    <com.songbai.futurex.view.TradeVolumeView
        android:id="@+id/tradeVolumeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:maxRows="5"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_weight="1.4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tradeType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:drawableRight="@drawable/ic_triangle_downward"
                android:textColor="@color/text49"
                android:textSize="15sp"
                tools:text="@string/buy_limit"/>

            <com.songbai.futurex.view.ChangePriceView
                android:id="@+id/changePriceView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <com.songbai.futurex.view.VolumeInputView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/trade_amt"
                    android:textColor="@color/text49"
                    android:textSize="13sp"/>

                <TextView
                    android:id="@+id/recharge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="@string/recharge_coin"
                    android:textColor="@color/colorPrimary"
                    android:textSize="13sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tradeAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/text49"
                android:textSize="13sp"
                tools:text="0 USDT"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="16dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lastPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/green"
                    android:textSize="17sp"
                    tools:text="9248.36"/>

                <TextView
                    android:id="@+id/priceChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="+0.75%"
                    android:textColor="@color/green"
                    android:textSize="12sp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/availableAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:maxLines="1"
                android:text="可用 369.14874122 USDT"
                android:textColor="@color/text99"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/availableCoins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:maxLines="1"
                android:text="可买 0.03990052 BTC"
                android:textColor="@color/text99"
                android:textSize="10sp"/>

            <SeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="28dp"
                android:maxHeight="4dp"
                android:paddingEnd="0dp"
                android:paddingStart="0dp"
                android:progressDrawable="@drawable/progress_bg"
                android:thumb="@drawable/thumb"
                android:thumbOffset="0dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="0 BTC - 0.03990052 BTC"
                android:textColor="@color/text99"
                android:textSize="10sp"/>

            <TextView
                android:id="@+id/tradeButton"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_green_r18"
                android:gravity="center"
                android:text="@string/buy_in"
                android:textColor="@color/white"
                android:textSize="15sp"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
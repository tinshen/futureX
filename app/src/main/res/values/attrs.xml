<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--底部 tabs-->
    <declare-styleable name="BottomTabs">
        <attr name="textSize" format="dimension"/>
        <attr name="textColor" format="color"/>
        <attr name="drawablePadding" format="dimension"/>
        <attr name="textPaddingTop" format="dimension"/>
        <attr name="textPaddingBottom" format="dimension"/>
        <attr name="textArray" format="reference"/>
        <attr name="iconArray" format="reference"/>
    </declare-styleable>

    <!--每个页面都会添加的 TitleBar-->
    <declare-styleable name="TitleBar">
        <attr name="titleText" format="reference|string"/>
        <attr name="titleTextSize" format="dimension|reference"/>
        <attr name="titleTextColor" format="color"/>
        <attr name="titleTextAlpha" format="float"/>
        <attr name="customView" format="reference"/>
        <attr name="rightBackground" format="reference"/>
        <attr name="rightText" format="reference|string"/>
        <attr name="rightTextSize" format="dimension"/>
        <attr name="rightTextColor" format="color"/>
        <attr name="rightImage" format="reference"/>
        <attr name="rightTextRightImage" format="reference"/>
        <attr name="rightVisible" format="boolean"/>
        <attr name="backFeature" format="boolean"/>
        <attr name="backIcon" format="reference"/>
        <attr name="backText" format="reference|string"/>
        <attr name="backTextSize" format="dimension|reference"/>
        <attr name="backTextColor" format="color"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="leftViewLeftPadding" format="dimension|reference"/>
        <attr name="android:maxLines"/>
        <attr name="titleLeftMargin" format="dimension|reference"/>
        <attr name="titleRightMargin" format="dimension|reference"/>
    </declare-styleable>

    <!--带图标和文字的行控件-->
    <declare-styleable name="IconTextRow">
        <attr name="leftIcon" format="reference"/>
        <attr name="rightIcon" format="reference"/>
        <attr name="rightIconVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="subText" format="reference|string"/>
        <attr name="subTextSize" format="reference|dimension"/>
        <attr name="subTextColor" format="color"/>
        <attr name="subTextBackground" format="reference"/>
        <attr name="subTextLeftDrawable" format="reference"/>
        <attr name="subTextRightDrawable" format="reference"/>
        <attr name="subTextRightMargin" format="reference|dimension"/>
        <attr name="subTextSingleLine" format="boolean"/>
        <attr name="subTextLeftMargin" format="reference|dimension"/>
        <attr name="subTextVisible">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="rowText" format="reference|string"/>
        <attr name="rowTextSize" format="dimension"/>
        <attr name="rowTextColor" format="color"/>
        <attr name="rowSubText" format="reference|string"/>
        <attr name="rowSubTextSize" format="dimension"/>
        <attr name="rowSubTextColor" format="color"/>
        <attr name="rowTextSpaceExtra" format="dimension"/>
        <attr name="rowVerticalPadding" format="dimension"/>
        <attr name="rowHorizontalPadding" format="dimension"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="splitLineLeftPadding" format="dimension"/>
    </declare-styleable>

    <!--RadioButtonHeader-->
    <declare-styleable name="RadioHeader">
        <attr name="tabArray" format="reference"/>
        <attr name="tabInterval" format="dimension|reference"/>
        <attr name="pointColor" format="color|reference"/>
    </declare-styleable>

    <!--密码输入控件-->
    <declare-styleable name="PasswordEditText">
        <attr name="textHint" format="reference|string"/>
        <attr name="hasBottomSplitLine"/>
        <attr name="splitLineColor"/>
        <attr name="maxCharNum" format="integer"/>
        <attr name="showPsdStrength" format="boolean"/>
        <attr name="psdStrengthMinLength" format="string"/>
        <attr name="splitLineHeight" format="dimension|reference"/>
    </declare-styleable>

    <!--固定宽度自动缩小的 TextView 控件-->
    <declare-styleable name="AutofitTextView">
        <!-- Minimum size of the text. -->
        <attr name="minTextSize" format="dimension"/>
        <!-- Amount of precision used to calculate the correct text size to fit within its
        bounds. Lower precision is more precise and takes more time. -->
        <attr name="precision" format="float"/>
        <!-- Defines whether to automatically resize text to fit to the view's bounds. -->
        <attr name="sizeToFit" format="boolean"/>
        <!-- Max view width that cannot beyond this -->
        <attr name="maxViewWidth" format="dimension"/>
    </declare-styleable>

    <!--用于显示 MA 数据的控件-->
    <declare-styleable name="MAView">
        <attr name="ma" format="integer"/>
        <attr name="maColor" format="color|reference"/>
        <attr name="maValue" format="string|reference"/>
        <attr name="android:textSize"/>
        <attr name="android:textColor"/>
        <attr name="marginLeft" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="PageIndicator">
        <attr name="indicators" format="integer"/>
        <attr name="indicatorsInterval" format="dimension"/>
        <attr name="indicatorColor" format="color"/>
        <attr name="selectedColor" format="color"/>
        <attr name="pointRadius" format="dimension"/>
        <attr name="rectWidth" format="dimension"/>
        <attr name="rectHeight" format="dimension"/>
        <attr name="infinite" format="boolean"/>
        <attr name="rectIndicators" format="boolean"/>
    </declare-styleable>

    <!-- 带红点的 textview -->
    <declare-styleable name="BadgeTextView">
        <attr name="badgeBgColor" format="color"/>
        <attr name="badgeTextColor" format="color"/>
        <attr name="badgeTextSize" format="dimension|reference"/>
        <attr name="badgeText" format="string"/>
        <attr name="badgeTextNum" format="integer"/>
        <attr name="badgeStyle" format="enum">
            <enum name="round" value="0"/>
            <enum name="circular" value="1"/>
        </attr>
        <attr name="radius" format="dimension|reference"/>
    </declare-styleable>

    <!-- 红点头部 TextView -->
    <declare-styleable name="RedPointTipTextView">
        <attr name="redPointTipVisibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="4"/>
            <enum name="gone" value="8"/>
        </attr>
        <attr name="redPointRadius" format="dimension|reference"/>
        <attr name="pointVerticalPadding" format="dimension|reference"/>
        <attr name="pointHorizontalPadding" format="dimension|reference"/>
    </declare-styleable>
</resources>
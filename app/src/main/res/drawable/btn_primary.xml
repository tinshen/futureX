<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="@color/disable"
                android:startColor="@color/disable"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#902A94E0"
                android:startColor="#9050B2FF"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="45"
                android:endColor="#2A94E0"
                android:startColor="#50B2FF"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>

</selector>